{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Service Definition",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the service"
    },
    "category": {
      "type": "string",
      "description": "Display category for the service"
    },
    "description": {
      "type": "string",
      "description": "Short description of the service"
    },
    "use_cases": {
      "type": "string",
      "description": "Common use cases"
    },
    "interface": {
      "type": "string",
      "description": "Primary URL/Interface pattern (e.g., service.<yourdomain>.com)"
    },
    "source": {
      "type": "string",
      "description": "Upstream source URL (GitHub, etc.)"
    },
    "depends_on": {
      "description": "Service dependencies",
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["name", "category", "description"]
}
