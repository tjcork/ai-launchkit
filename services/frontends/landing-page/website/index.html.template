<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI CoreKit Dashboard</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 1rem;
        }
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }
        h1 {
            color: white;
            text-align: center;
            margin-bottom: 1rem;
            font-size: 3rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        .subtitle {
            color: rgba(255,255,255,0.9);
            text-align: center;
            margin-bottom: 3rem;
            font-size: 1.2rem;
        }
        .category {
            margin-bottom: 3rem;
        }
        .category-title {
            color: white;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            padding-left: 1rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        }
        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.2rem;
        }
        .service-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s;
            text-decoration: none;
            color: #333;
            position: relative;
            overflow: hidden;
            cursor: pointer;
        }
        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transform: translateX(-100%);
            transition: transform 0.3s;
        }
        .service-card:hover::before {
            transform: translateX(0);
        }
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            background: white;
        }
        .service-name {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #2d3748;
        }
        .service-desc {
            color: #718096;
            font-size: 0.9rem;
            line-height: 1.4;
        }
        .footer {
            text-align: center;
            color: rgba(255,255,255,0.8);
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(255,255,255,0.2);
        }
        .domain-info {
            text-align: center;
            color: rgba(255,255,255,0.7);
            font-size: 0.9rem;
            margin-bottom: 2rem;
        }
        @media (max-width: 768px) {
            h1 { font-size: 2rem; }
            .category-title { font-size: 1.5rem; }
            .services-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸš€ AI CoreKit</h1>
        <p class="subtitle">Your Complete AI Development & Automation Platform</p>
        <p class="domain-info" id="domainInfo"></p>
        
        <div id="servicesContainer">
            <!-- Services will be injected here by JavaScript -->
        </div>

        <div class="footer">
            <p>ðŸš€ AI CoreKit v1.14.0 | Maintained by <a href="https://github.com/tcoretech" style="color: white; text-decoration: none;" target="_blank">tcoretech</a></p>
            <p style="margin-top: 0.5rem; font-size: 0.9rem;">
                <a href="https://github.com/tcoretech/ai-corekit" style="color: white; text-decoration: none;">
                    GitHub Repository
                </a> |
                Forked from <a href="https://github.com/freddy-schuetz/ai-launchkit" style="color: white; text-decoration: none;">
                    ai-launchkit
                </a> by <a href="https://www.linkedin.com/in/friedemann-schuetz/" style="color: white; text-decoration: none;">Friedemann Schuetz</a>
            </p>
        </div>
    </div>

    <script>
        // Get the current domain
        const currentDomain = window.location.hostname;
        const protocol = window.location.protocol;
        
        // Display current domain
        document.getElementById('domainInfo').textContent = `Services running on: ${currentDomain}`;

        // Define all services organized by category
        // Generated by prepare.sh
        const serviceCategories = [
            /* SERVICE_CATEGORIES_PLACEHOLDER */
        ];

        // Generate HTML for all services
        let html = '';
        serviceCategories.forEach(category => {
            html += `
                <div class="category">
                    <h2 class="category-title">${category.name}</h2>
                    <div class="services-grid">
            `;
            
            category.services.forEach(service => {
                const serviceUrl = `${protocol}//${service.subdomain}.${currentDomain}`;
                html += `
                    <a href="${serviceUrl}" class="service-card" target="_blank">
                        <div class="service-name">${service.name}</div>
                        <div class="service-desc">${service.desc}</div>
                    </a>
                `;
            });
            
            html += `
                    </div>
                </div>
            `;
        });

        // Insert the generated HTML
        document.getElementById('servicesContainer').innerHTML = html;
    </script>
</body>
</html>
